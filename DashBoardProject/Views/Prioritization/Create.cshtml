@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Prioritization";

}
@model DashBoardProject.Models.IssuesModel

<div class="dashhead">
    <div class="dashhead-titles">
        <h6 class="dashhead-subtitle">Meeting Agendas</h6>
        <h2 class="dashhead-title">Prioritization</h2>
    </div>
</div>

<ul class="nav nav-pills">
    <li class="active">
        <a href="@Url.Action("Create","Prioritization")">
            <span class="icon icon-add-to-list"></span>
            Create Issues
        </a>
    </li>
    <li>
        <a href="@Url.Action("ViewListOfIssues","Prioritization")">
            <span class="icon icon-folder"></span>
            All Issues
        </a>
    </li>
    <li>
        <a href="@Url.Action("Prioritize","Prioritization")">
            <span class="icon icon-shuffle"></span>
            Prioritize Issues
        </a>
    </li>
</ul>

<hr class="m-t">

@using (Html.BeginForm("Create", "Prioritization", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    @Html.Partial("_CreateForm",Model)

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-success-outline p-x" />
            @Html.ActionLink("Cancel", "Index", new { }, new { @class = "btn btn-danger-outline p-x" })
        </div>
    </div>

}